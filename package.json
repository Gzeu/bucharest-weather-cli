{
  "name": "@gzeu/bucharest-weather-cli",
  "version": "3.0.0",
  "description": "ðŸŒ¤ï¸ Professional weather CLI for Bucharest with advanced template system, AI insights, forecasts, and enterprise-grade meteorological intelligence - 2025 Edition",
  "main": "src/index.js",
  "type": "module",
  "bin": {
    "bucharest-weather": "./bin/bucharest-weather",
    "bw": "./bin/bucharest-weather",
    "weather-ai": "./bin/bucharest-weather"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/cli.js",
    "build": "npm run lint && npm run test && npm run docs",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:performance": "node test/performance.js",
    "test:e2e": "node test/e2e.js",
    "test:templates": "node examples/template-showcase.js --performance",
    "install-global": "npm install -g .",
    "uninstall-global": "npm uninstall -g @gzeu/bucharest-weather-cli",
    "lint": "eslint src bin --ext .js,.ts",
    "lint:fix": "eslint src bin --ext .js,.ts --fix",
    "format": "prettier --write \"**/*.{js,ts,json,md,yml}\"",
    "type-check": "tsc --noEmit",
    "demo": "node src/cli.js demo",
    "demo:templates": "node examples/template-showcase.js --templates",
    "demo:themes": "node examples/template-showcase.js --themes",
    "demo:combinations": "node examples/template-showcase.js --combinations",
    "demo:interactive": "node examples/template-showcase.js --interactive",
    "demo:ai": "node src/cli.js forecast --template dashboard --days 7",
    "showcase": "node examples/template-showcase.js",
    "setup-help": "node src/cli.js setup --help",
    "config-setup": "node src/cli.js config",
    "quick-setup": "node src/cli.js welcome && node src/cli.js config",
    "template-gallery": "node src/cli.js templates --gallery",
    "theme-gallery": "node src/cli.js theme --gallery",
    "publish-npm": "npm publish --registry https://registry.npmjs.org/ --access public",
    "publish-github": "npm publish --registry https://npm.pkg.github.com --access public",
    "publish-both": "npm run publish-npm && npm run publish-github",
    "pre-publish": "npm run build && npm run test && npm version patch",
    "deploy": "npm run pre-publish && npm run publish-both",
    "benchmark": "node benchmark/speed.js",
    "benchmark:ai": "node benchmark/ai-performance.js",
    "benchmark:templates": "node examples/template-showcase.js --performance",
    "docs": "node scripts/generate-docs.js",
    "docs:api": "jsdoc src -r -d docs/api",
    "docs:templates": "node scripts/generate-template-docs.js",
    "clean-cache": "node src/cache.js --clean",
    "health-check": "node src/health.js",
    "monitor": "node scripts/monitor.js",
    "validate:data": "node scripts/validate-weather-data.js",
    "validate:templates": "node scripts/validate-templates.js",
    "security:audit": "npm audit --audit-level moderate",
    "release": "standard-version && git push origin main --tags",
    "clean": "rimraf coverage dist logs/*.log ~/.bucharest-weather-cli/cache/*",
    "reset-config": "rimraf ~/.bucharest-weather-cli/template-config.json",
    "backup-config": "cp ~/.bucharest-weather-cli/template-config.json ./backup-config.json",
    "restore-config": "cp ./backup-config.json ~/.bucharest-weather-cli/template-config.json"
  },
  "keywords": [
    "weather",
    "cli",
    "bucharest",
    "romania",
    "ai",
    "templates",
    "themes",
    "visual",
    "ascii-art",
    "dashboard",
    "machine-learning",
    "forecast",
    "terminal",
    "openweathermap",
    "mcp",
    "perplexity",
    "meteorology",
    "air-quality",
    "uv-index",
    "professional",
    "enterprise",
    "productivity",
    "automation",
    "analytics",
    "climate",
    "predictions",
    "alerts",
    "customization",
    "2025",
    "github-packages",
    "npm-registry"
  ],
  "author": {
    "name": "George Pricop",
    "email": "pricopgeorge@gmail.com",
    "url": "https://github.com/Gzeu"
  },
  "license": "MIT",
  "dependencies": {
    "commander": "^12.1.0",
    "axios": "^1.7.7",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.5",
    "ora": "^8.1.0",
    "boxen": "^8.0.1",
    "figlet": "^1.8.2",
    "node-cache": "^5.1.2",
    "date-fns": "^4.1.0",
    "cli-table3": "^0.6.5",
    "cli-progress": "^3.12.0",
    "inquirer": "^10.2.2",
    "fast-csv": "^5.0.1",
    "qrcode-terminal": "^0.12.0",
    "winston": "^3.14.2",
    "zod": "^3.23.8",
    "groq-sdk": "^0.7.0",
    "openai": "^4.65.0",
    "@anthropic-ai/sdk": "^0.27.3",
    "natural": "^8.0.1",
    "ml-matrix": "^6.12.0",
    "simple-statistics": "^7.8.3",
    "node-schedule": "^2.1.1",
    "nodemailer": "^6.9.15",
    "node-telegram-bot-api": "^0.65.0",
    "uuid": "^10.0.0",
    "compression": "^1.7.4",
    "table": "^6.8.2",
    "csv-writer": "^1.6.0",
    "moment": "^2.30.1"
  },
  "devDependencies": {
    "@types/node": "^20.16.10",
    "@types/jest": "^29.5.13",
    "@types/inquirer": "^9.0.7",
    "@types/uuid": "^10.0.0",
    "@types/nodemailer": "^6.4.19",
    "@types/node-telegram-bot-api": "^0.64.0",
    "jest": "^29.7.0",
    "eslint": "^9.11.1",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "prettier": "^3.3.3",
    "nodemon": "^3.1.7",
    "typescript": "^5.6.2",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "benchmark": "^2.1.4",
    "jsdoc": "^4.0.3",
    "standard-version": "^9.5.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Gzeu/bucharest-weather-cli.git"
  },
  "bugs": {
    "url": "https://github.com/Gzeu/bucharest-weather-cli/issues"
  },
  "homepage": "https://github.com/Gzeu/bucharest-weather-cli#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  },
  "files": [
    "src/",
    "bin/",
    "examples/",
    "docs/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    ".npmrc"
  ],
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/Gzeu"
  },
  "config": {
    "cache_duration": 300,
    "retry_attempts": 5,
    "timeout": 15000,
    "default_language": "ro",
    "ai_enabled": true,
    "notifications": true,
    "templates_enabled": true,
    "default_template": "classic",
    "default_theme": "default"
  },
  "volta": {
    "node": "20.18.0",
    "npm": "10.8.2"
  }
}